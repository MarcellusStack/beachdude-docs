---
// Base layout with shared head, header and footer
import "../styles/global.css";
import logo from "../assets/logo.png";
import { Image } from "astro:assets";
import PostHog from "../components/posthog.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title = "BeachDude", description = "BeachDude – Offline-KI-Assistent" } = Astro.props as Props;
---
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="BeachDude" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={new URL(Astro.url.pathname, Astro.site)} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta property="og:locale" content="de_DE" />
    <link rel="alternate" hreflang="de-DE" href={new URL(Astro.url.pathname, Astro.site)} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#002d55" />
  
    <PostHog  />
  </head>
  <body class="min-h-dvh bg-white text-gray-900">
    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'SoftwareApplication',
        name: 'BeachDude',
        applicationCategory: 'BusinessApplication',
        operatingSystem: 'Web',
        description,
        url: String(new URL(Astro.url.pathname, Astro.site)),
        inLanguage: 'de',
        keywords: 'Rettungsschwimmer Software, Strandsoftware, Wasserwacht Software, DLRG Software',
        audience: { '@type': 'Audience', audienceType: 'Rettungsschwimmer, Wasserwacht, DLRG' },
        about: [
          { '@type': 'Thing', name: 'Rettungsschwimmer Software' },
          { '@type': 'Thing', name: 'Wasserwacht' },
          { '@type': 'Thing', name: 'DLRG' },
          { '@type': 'Thing', name: 'Strandsoftware' }
        ]
      })}
    </script>
    <header class="sticky top-0 z-40 w-full border-b border-gray-200/70 bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60">
      <div class="mx-auto max-w-7xl px-4 py-3 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2">
          <Image src={logo} alt="BeachDude Logo" width={32} height={32} widths={[32, 64]} sizes="32px" quality={100} format="png" />
          <span class="font-semibold tracking-tight text-2xl text-[#002d55]">BeachDude</span>
        </a>
        <nav class="hidden md:flex items-center gap-6 text-sm">
          <a class="inline-flex items-center rounded-md bg-[#002d55] px-3 py-2 text-white hover:bg-[#002244]" href="/waitlist">Kostenlos starten</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-white">
      <div class="mx-auto max-w-7xl px-4 py-10 text-sm text-gray-600">
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
          <p>© {new Date().getFullYear()} BeachDude. Alle Rechte vorbehalten.</p>
          <!-- <nav class="flex gap-4">
            <a class="hover:text-[#002d55]" href="/docs/">Docs</a>
            <a class="hover:text-[#002d55]" href="#">Impressum</a>
            <a class="hover:text-[#002d55]" href="#">Datenschutz</a>
          </nav> -->
        </div>
      </div>
    </footer>
  </body>
</html>


